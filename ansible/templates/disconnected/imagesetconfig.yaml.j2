apiVersion: mirror.openshift.io/v2alpha1
kind: ImageSetConfiguration
mirror:
  platform:
    channels:
    - name: stable-{{ ocp_version }}
      minVersion: {{ ocp_version }}.{{ ocp_minor_version }}
      maxVersion: {{ ocp_version }}.{{ ocp_minor_version }}
    graph: true
  operators:
  - catalog: registry.redhat.io/redhat/redhat-operator-index:v{{ ocp_version }}
    packages:
      - name: kubernetes-nmstate-operator
        channels:
          - name: stable
      - name: kubevirt-hyperconverged
        channels:
          - name: stable
            minVersion: "{{ cnv_hyperconverged_operator_version }}"
      - name: sriov-network-operator
        channels:
          - name: stable
          - name: "{{ sriov_version }}"
        defaultChannel: stable
{% for operator in ocp_mirror_extra_operators %}
      - name: "{{ operator }}"
{% endfor %}