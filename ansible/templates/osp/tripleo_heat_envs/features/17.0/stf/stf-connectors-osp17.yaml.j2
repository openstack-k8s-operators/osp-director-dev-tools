resource_registry:
  OS::TripleO::Services::Collectd: /usr/share/openstack-tripleo-heat-templates/deployment/metrics/collectd-container-puppet.yaml

parameter_defaults:
    CeilometerQdrEventsConfig:
      driver: amqp
      topic: ospdo-event
    CeilometerQdrMetricsConfig:
      driver: amqp
      topic: ospdo-metering
    CeilometerQdrPublishMetrics: true
    CollectdAmqpInstances:
      osp17-notify:
        format: JSON
        notify: true
        presettle: false
      ospdo-telemetry:
        format: JSON
        presettle: false
    CollectdEnableSensubility: true
    CollectdSensubilityLogLevel: DEBUG
    CollectdSensubilityResultsChannel: sensubility/ospdo-telemetry
    CollectdSensubilityTransport: amqp1
    ContainerHealthCheckDisabled: false
    MetricsQdrAddresses:
    - distribution: multicast
      prefix: collectd
    - distribution: multicast
      prefix: anycast/ceilometer
    MetricsQdrConnectors:
    - host: default-interconnect-5671-service-telemetry.apps.leonidcluster.lab.upshift.rdu2.redhat.com
      port: 443
      role: edge
      sslProfile: sslProfile
      verifyHostname: false
