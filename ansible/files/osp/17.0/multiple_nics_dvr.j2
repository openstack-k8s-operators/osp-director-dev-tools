---
network_config:
- type: interface
  name: nic1
  mtu: 1450
  use_dhcp: false
  addresses:
  - ip_netmask: 10.0.2.2/24
  routes:
  - ip_netmask: 172.30.0.1/32
    next_hop: 10.0.2.1
- type: interface
  name: nic2
  mtu: {{ ctlplane_mtu }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  domain: {{ dns_search_domains }}
  routes:
  - ip_netmask: 0.0.0.0/0
    next_hop: {{ ctlplane_gateway_ip }}
    default: true
  use_dhcp: false
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/{{ ctlplane_subnet_cidr }}
{% for network in networks_all if network not in networks_skip_config|default([]) %}
{% if network == 'External' %}
- type: ovs_bridge
  name: {{ neutron_physical_bridge_name }}
  mtu: {{ lookup('vars', networks_lower[network] ~ '_mtu') }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  use_dhcp: false
{% if network in role_networks %}
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower[network] ~ '_ip') }}/{{ lookup('vars', networks_lower[network] ~ '_cidr') }}
  routes: {{ lookup('vars', networks_lower[network] ~ '_host_routes') }}
{% endif %}
  members:
  - type: interface
    name:  nic{{ loop.index +2 }}
    mtu: {{ lookup('vars', networks_lower[network] ~ '_mtu') }}
    primary: true
{% elif network not in ["External", "Tenant"] and network in role_networks %}
- type: interface
  name: nic{{ loop.index +2 }}
  mtu: {{ lookup('vars', networks_lower[network] ~ '_mtu') }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower[network] ~ '_ip') }}/{{ lookup('vars', networks_lower[network] ~ '_cidr') }}
  routes: {{ lookup('vars', networks_lower[network] ~ '_host_routes') }}
{% elif network == 'Tenant' and network in role_networks %}
- type: ovs_bridge
  name: br-tenant
  mtu: {{ lookup('vars', networks_lower[network] ~ '_mtu') }}
  dns_servers: {{ ctlplane_dns_nameservers }}
  use_dhcp: false
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower[network] ~ '_ip') }}/{{ lookup('vars', networks_lower[network] ~ '_cidr') }}
  routes: {{ lookup('vars', networks_lower[network] ~ '_host_routes') }}
  members:
  - type: interface
    name: nic{{loop.index + 2}}
    mtu: {{ lookup('vars', networks_lower[network] ~ '_mtu') }}
    use_dhcp: false
    primary: true
{% endif %}
{% endfor %}
